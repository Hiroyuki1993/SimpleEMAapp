<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="jp.ac.u_tokyo.p.khiroyuki.simpleemaapp.ExportAnswers">

    <TextView android:text="@string/title_export" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/chose_folder"
        android:text="@string/chose_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btn_ChoseFolder"/>
    <TextView
        android:id="@+id/txt_folder_path"
        android:text="@string/folder_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_export"
        android:text="@string/export_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="exportBtnOnClick"/>

</LinearLayout>
