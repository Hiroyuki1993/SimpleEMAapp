<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.ac.u_tokyo.p.khiroyuki.simpleemaapp.SettingAlarm"
    android:orientation="vertical">

    <TextView android:text="@string/alarm_list" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_weight="2"/>
    <ListView
        android:id="@+id/alarm_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"></ListView>
    <Button
        android:text="@string/add_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="btn_addAlarm_onClick"/>
</LinearLayout>
